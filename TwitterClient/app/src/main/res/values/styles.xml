<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="NoActionBar_Welcome" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowExitTransition">@transition/welcome_exit</item>
        <item name="android:windowReenterTransition">@transition/welcome_reenter</item>
    </style>

    <style name="NoActionBar_Timeline" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowExitTransition">@transition/timeline_exit</item>
        <item name="android:windowReenterTransition">@transition/timeline_reenter</item>
    </style>

    <style name="NoActionBar_Compose" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowEnterTransition">@transition/compose_detail</item>
    </style>


    <style name="LoginButton" parent="Theme.AppCompat">
        <item name="colorButtonNormal">@color/colorPrimaryTwitter</item>
        <item name="colorControlHighlight">@color/colorSecondaryTwitter</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/button_bg_rounded_corners</item>
    </style>

</resources>
